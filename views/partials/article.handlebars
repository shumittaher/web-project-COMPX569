<div id="article-{{this.article_id}}" class="articlesCard card mb-3" data-article-id="{{this.article_id}}" data-user-id="{{this.userid}}">
    <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <small class="text-muted">Posted by {{this.fullName}}</small><br>
        <small class="text-muted">{{this.postTime}}</small>
        <hr>
        <p class="card-text mt-3">{{this.content}}</p>
        {{#if this.image_path}}
            <img src="{{this.image_path}}" alt="Article Image" class="img-fluid mb-3">
        {{/if}}
    </div>
    <div class="card-footer">
        <div id="like-status-{{this.article_id}}" class="like-status d-flex align-items-center">
            <button id="like-button-{{this.article_id}}" class="btn btn-outline-primary">
                <span id="like-icon-{{this.article_id}}">üëç</span>
                <span id="like-text-{{this.article_id}}">Like</span>
            </button>
        </div>
    </div>
</div>
