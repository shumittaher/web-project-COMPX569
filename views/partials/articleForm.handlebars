<form
        {{#if existingArticle}}
            id="editArticleForm"
        {{else}}
            id="newArticleForm"
        {{/if}}
        action="{{#if existingArticle}}/api/edit{{else}}/api/new{{/if}}"
        method="post" class="bg-light input_form rounded">

    <input type="hidden" class="editArticleId" name="article_id">

    <hr>

    <div class="p-3" style="display: grid; row-gap: 1em;">

        <div class="form-group d-flex align-items-center">
            <label for="{{#if existingArticle}}edit-{{/if}}title" class="mx-3 w-25 text-end">Title</label>
            <input id="{{#if existingArticle}}edit-{{/if}}title" required class="form-control articleTitleInput" autofocus type="text" name="title" maxlength="32" placeholder="Enter article title">
        </div>


        <div class="form-group d-flex align-items-start">
            <label for="{{#if existingArticle}}edit-{{/if}}content" class="mx-3 w-25 text-end">Content</label>
            <div class="w-100" >
                <div id="{{#if existingArticle}}edit-{{/if}}editor" style="width: 100%; height: 300px;" class="form-control quilEditBox"></div>
            </div>
            <textarea id="{{#if existingArticle}}edit-{{/if}}content" hidden name="content" class="quillTargetBox"></textarea>
        </div>

        <div class="form-group d-flex align-items-center">
            <label for="{{#if existingArticle}}edit-{{/if}}image" class="mx-3 w-25 text-end">Upload Image</label>
            <input id="{{#if existingArticle}}edit-{{/if}}image" class="form-control imageUploader" type="file" name="image_path" accept=".png,.jpg,.jpeg,.bmp">
        </div>

    </div>

    <input class="btn btn-primary btn-lg py-4 w-100" type="submit" value="{{#if existingArticle}}ðŸ’¾ Save Changes{{else}}ðŸ“ Publish{{/if}}">
</form>