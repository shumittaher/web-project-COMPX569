<form {{#if existingArticle}}id="editBox"{{/if}} action="{{#if existingArticle}}/api/edit{{else}}/api/new{{/if}}" method="post" class="bg-light input_form">
    <input type="hidden" class="editArticleId" name="article_id">

    <hr>

    <div class="p-3" style="display: grid; row-gap: 1em;">

        <div class="form-group d-flex align-items-center">
            <label for="{{#if existingArticle}}edit{{/if}}title" class="mx-3 w-25 text-end">Title</label>
            <input id="{{#if existingArticle}}edit{{/if}}title" required class="form-control" autofocus type="text" name="title" maxlength="32" placeholder="Enter article title">
        </div>

        <div class="form-group d-flex align-items-start">
            <label for="{{#if existingArticle}}edit{{/if}}content" class="mx-3 w-25 text-end">Content</label>
            <textarea id="{{#if existingArticle}}edit{{/if}}content" required class="form-control" name="content" rows="10" placeholder="Write your article here..."></textarea>
        </div>

        <div class="form-group d-flex align-items-center">
            <label for="{{#if existingArticle}}edit{{/if}}image" class="mx-3 w-25 text-end">Upload Image</label>
            <input id="{{#if existingArticle}}edit{{/if}}image" class="form-control" type="file" name="image_path" accept="image/jpx, image/png, image/gif, image/bmp">
            <small id="{{#if existingArticle}}edit{{/if}}imageFeedback" class="form-text"></small>
        </div>
        <input type="hidden" name="parent_id" value="{{parent_id}}">

    </div>

    <input class="btn btn-primary btn-lg py-4" type="submit" value="{{#if existingArticle}}ðŸ’¾ Save Changes{{else}}ðŸ“ Publish{{/if}}">
</form>